<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="601dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/signUpError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FF0000"
            android:visibility="gone"
            tools:ignore="MissingConstraints"/>

        <TextView
            android:id="@+id/signUpSuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#00FF00"
            android:visibility="gone"
            tools:ignore="MissingConstraints"/>

        <EditText
            android:id="@+id/customerEmailRegister"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:singleLine="true" />

        <EditText
            android:id="@+id/customerPasswordRegister"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:singleLine="true" />

        <EditText
            android:id="@+id/customerNameRegister"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:singleLine="true" />

        <EditText
            android:id="@+id/customerPhoneRegister"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="Phone"
            android:inputType="phone"
            android:singleLine="true" />

        <EditText
            android:id="@+id/customerAddressRegister"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="Address"
            android:inputType="textPostalAddress"
            android:singleLine="true" />

        <Button
            android:id="@+id/signUpButton"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:text="Sign Up"
            android:onClick="signUp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="0dp"
            android:onClick="signUpBack"
            android:layout_marginBottom="20dp"
            android:text="Back"
            android:textAlignment="center" />




    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>