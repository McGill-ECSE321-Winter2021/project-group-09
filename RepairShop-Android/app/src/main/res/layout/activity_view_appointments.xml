<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20sp"
        android:paddingRight="20sp">

        <TextView
            android:id="@+id/viewAppointmentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20sp"
            android:paddingBottom="20sp"
            android:text="@string/viewAppointments"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_anchor="@+id/textView3"
            app:layout_anchorGravity="center" />

        <TextView
            android:id="@+id/cancelError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:textColor="?attr/colorError"
            android:textSize="18sp"
            tools:visibility="gone"
            />

        <TextView
            android:id="@+id/cancelSuccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16sp"
            android:text=""
            android:textAlignment="center"
            android:textColor="#4CAF50"
            android:textSize="18sp"
            tools:visibility="gone"

            />
        <LinearLayout
            android:id="@+id/viewAppointments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cancelSelectAnAppointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="16sp"
                android:text="@string/select_an_appointment_to_cancel"
                android:textSize="18sp" />

            <ListView
                android:id="@+id/appointmentList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>