<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20sp"
        android:paddingRight="20sp">

        <TextView
            android:id="@+id/bookTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20sp"
            android:paddingBottom="20sp"
            android:text="@string/bookAppointment"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_anchor="@+id/textView3"
            app:layout_anchorGravity="center" />

        <LinearLayout
            android:id="@+id/book1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bookSelectAService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="16sp"
                android:text="@string/select_a_service"
                android:textSize="18sp" />

            <ListView
                android:id="@+id/bookServiceList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/book2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="16sp"
                android:text="@string/search_future_date"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/futureDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/yyyy_mm_dd_format"
                android:inputType="text"
                android:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="20sp">

                <Button
                    android:id="@+id/today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/today" />

                <Button
                    android:id="@+id/futureDateBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:text="@string/go" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="16sp"
                android:text="@string/select_a_time_slot"
                android:textSize="18sp" />

            <ListView
                android:id="@+id/possibleTimeSlotsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/book3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/booked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16sp"
                android:text="@string/appointment_booked"
                android:textAlignment="center"
                android:textColor="#4CAF50"
                android:textSize="18sp" />

            <Button
                android:id="@+id/backHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/homepage" />

        </LinearLayout>

        <TextView
            android:id="@+id/bookError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16sp"
            android:text=""
            android:textColor="?attr/colorError"
            android:textSize="18sp"
            tools:visibility="gone" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>